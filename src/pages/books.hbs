<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="https://glitch.com/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{{seo.title}}</title>

    <!-- Meta tags for SEO and social sharing -->
    <link rel="canonical" href="{{seo.url}}">
    <meta name="description" content="{{seo.description}}">
    <meta property="og:title" content="{{seo.title}}">
    <meta property="og:type" content="article">
    <meta property="og:url" content="{{seo.url}}">
    <meta property="og:description" content="{{seo.description}}">
    <meta property="og:image" content="{{seo.image}}">
    <meta name="twitter:card" content="summary">

    <!-- Import the webpage's stylesheet -->
    <link rel="stylesheet" href="/style.css" />
    <!-- Background color -->
    <style> body{ background-image:linear-gradient(to right, #283c86 0%, #45a247 100%);} </style>
    <!-- Icons -->
    <script src="https://kit.fontawesome.com/edfaca1bfa.js" crossorigin="anonymous"></script>
    <!-- Active top navigation bar -->
    <script>
      window.onload = function(){
        let a = document.getElementById("topnav_books");
        a.setAttribute("class", "active");
      }
    </script>
  </head>

  <body>
    <!-- Top Navigation Bar -->
    {{> topnav}}
    <!-- Error -->
    {{#if error}}
      {{> error}}
    {{/if}}
    
    <!-- View book -->
    <div class="books">
      <!-- Title -->
      <header>
        <h1>Livros no Estoque</h1>
      </header>
      <!-- Table -->
      <table class="books_table">
        <thead>
          <tr>
            <th>ISBN</th>
            <th>Nome</th>
            <th>Autor</th>
            <th>Estoque</th>
          </tr>
        </thead>
        <tbody>
          {{#each books}}
            <tr>
              <td>{{isbn}}</td>
              <td>{{name}}</td>
              <td>{{author}}</td>
              <td class="quantity">{{quantity}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </body>

</html>